    "version": "0.2.0",
    "configurations": [
        {
            "name" : "Debug Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/debug",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "environment": [],
            "stopAtEntry": false,
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text" : "-enable-pretty-printing"
                }
            ],
            "preLaunchTask": "C/C++: g++ build folder"
        }
    ]
}